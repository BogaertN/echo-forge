#!/usr/bin/env python3
"""
Test script for individual agents
Run from project root: python test_agent.py
"""

import sys
import os
import asyncio

# Add project root to Python path
sys.path.insert(0, os.path.dirname(os.path.abspath(__file__)))

from agents.base_agent import BaseAgent, AgentConfig, AgentResponse
from agents.stoic_clarifier import StoicClarifier

async def test_agent():
    """Test agent functionality."""
    print("Testing EchoForge Agent...")
    
    # Create agent with configuration
    config = AgentConfig(
        model="llama3.1:8b",
        temperature=0.7,
        session_id="test_session"
    )
    
    agent = StoicClarifier(config)
    print(f"Created agent: {agent.__class__.__name__} (ID: {agent.agent_id})")
    
    # Test prompt
    test_question = "What should I do with my life?"
    print(f"\nTesting with question: '{test_question}'")
    
    try:
        response = await agent.clarify_question(test_question)
        print(f"\nAgent response: {response.content}")
        print(f"Confidence: {response.confidence}")
    except Exception as e:
        print(f"Error testing agent: {e}")

if __name__ == "__main__":
    asyncio.run(test_agent())
